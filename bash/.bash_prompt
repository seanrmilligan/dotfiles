# If TERM is set to a color-enabled terminal, turn on the color prompt.
case "$TERM" in
  xterm-color|*-256color) color_prompt=yes;;
esac

# Create a basic prompt
#
# Prompt color ranges:
# 30-37 foreground
# 40-47 background
# 90-97 high intensity foreground
# 100-107 high intensity background
#
# Prompt colors:
# 0 - Black
# 1 - Red
# 2 - Green
# 3 - Yellow
# 4 - Blue
# 5 - Purple
# 6 - Cyan
# 7 - White
#
# Bold bit:
# 0 - Normal
# 1 - Bold
#
# Format:
# \[\e[BOLD_BIT;COLOR\]
#
# Special values:
# \u user
# \h hostname
# \w working directory
function set_prompt {
  local BLACK="\[\e[0;30m\]"
  local BLACKBOLD="\[\e[1;30m\]"
  local RED="\[\e[0;31m\]"
  local REDBOLD="\[\e[1;31m\]"
  local REDLIGHT="\[\e[0;91m\]"
  local GREEN="\[\e[0;32m\]"
  local GREENBOLD="\[\e[1;32m\]"
  local GREENLIGHT="\[\e[0;92m\]"
  local YELLOW="\[\e[0;33m\]"
  local YELLOWBOLD="\[\e[1;33m\]"
  local BLUE="\[\e[0;34m\]"
  local BLUEBOLD="\[\e[1;34m\]"
  local BLUELIGHT="\[\e[0;94m\]"
  local PURPLE="\[\e[0;35m\]"
  local PURPLEBOLD="\[\e[1;35m\]"
  local CYAN="\[\e[0;36m\]"
  local CYANBOLD="\[\e[1;36m\]"
  local WHITE="\[\e[0;37m\]"
  local WHITEBOLD="\[\e[1;37m\]"
  local CLR="\[\e[0m\]"

  case "$PWD" in
    ${HOME}*)
      # User's home directory.
      # Replace the leading part of the path that matches $HOME with a ~
      local git_branch=$(git branch --show-current 2> /dev/null)
      if [ "$color_prompt" == "yes" ]
      then
        export PS1="$BLUELIGHT~${PWD/$HOME/}$CLR $ "
      else
        export PS1="~${PWD/$HOME/} $ "
      fi
      ;;
    *)
      # Anywhere else. Leave directory as-is.
      local git_branch=$(git branch --show-current 2> /dev/null)
      if [ "$color_prompt" == "yes" ]
      then
        export PS1="$BLUELIGHT$PWD$CLR $ "
      else
        export PS1="$PWD $ "
      fi
      ;;
   esac
}

unset color_prompt
